
{% extends 'base.html.twig' %}

{% block body %}
<nav class="menu-list">
  <div class="menu-list-search">
    <div class="InputAddOn">
      <input class="InputAddOn-field" type="text">
      <button class="InputAddOn-item">Search</button>
    </div>
  </div>
  <div class="menu-list-element">
    Sort by name
  </div>
  <div class="menu-list-element">
    Sort by category
  </div>
  <div class="menu-list-element">
    Sort by number of pages
  </div>
  <div class="menu-list-element">
    Something something
  </div>
  <div class="menu-list-element">
    Another thing
  </div>
  <div class="menu-list-element">
    Yet another option
  </div>
</nav>
<article class="item-list">
<h1>List</h1>

<div class="table">
    <div class="row header">
      <div class="cell">
        Title
      </div>
      <div class="cell">
        Author
      </div>
      <div class="cell">
        Category
      </div>
      <div class="cell">
        Language
      </div>
      <div class="cell">
        Year
      </div>
      <div class="cell">
        Availability
      </div>
      <div class="cell">
        Details
      </div>
    </div>
	{% for item in items %}
	<div class="row">
		<div class="cell">
			{{item.title}}
		</div>
		<div class="cell">
			{{item.author}}
		</div>
		<div class="cell">
			{{item.subject}}
		</div>
		<div class="cell">
			{{item.language}}
		</div>
		<div class="cell">
			{{item.publication_year}}
		</div>
		<div class="cell">
			{{item.availability}}
		</div>
		<div class="cell">
			{{item.note}}
		</div>
	</div>
{% endfor %}
</div>


</article>
{% endblock %}
