{% extends 'base.html.twig' %}

{% block body %}
<article class="article-text-block">
  <h1>Password update</h1>
  <form action="/user/changedpass" method="post" class="login-block">
    <div class="InputAddOn">
      <div class="InputAddOn-item">Current password</div>
      <input class="InputAddOn-field" name="curpass" type="password">
    </div>
    <div class="InputAddOn">
      <div class="InputAddOn-item">New password</div>
      <input class="InputAddOn-field" name="newpass" type="password">
    </div>
    <div class="InputAddOn">
      <div class="InputAddOn-item">Repeat password</div>
      <input class="InputAddOn-field" name="newpassbis" type="password">
    </div>
    <div class="InputAddOn submit-login">
      <button class="InputAddOn-item" type="submit">Submit</button>
    </div>
  </form>
</article>
{% endblock %}
