{% extends 'base.html.twig' %}

{% block body %}
{{ parent () }}
<div class="container">
  <h1>Password update</h1>
  <form method="post" id="changePassForm" action="/user/changedpass">
    <div class="row">
      <div class="form-group col-md-6 col-xs-12">
	<div class="input-group">
	  <div class="input-group-addon">Current password</div>
	  <input class="form-control" name="curpass" type="password">
	</div>
      </div>
      <div class="form-group col-md-6 col-xs-12">
	<div class="input-group">
	  <div class="input-group-addon">New password</div>
	  <input class="form-control" name="newpass" type="password">
	</div>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-6 col-xs-12">
	<div class="input-group">
	  <span class="input-group-addon">Repeat password</span>
	  <input class="form-control" name="newpassbis" type="password">
	</div>
      </div>
      <div class="form-group col-md-6 col-xs-12">
	<div class="input-group">
	  <button class="btn btn-primary" type="submit">Submit</button>
	</div>
      </div>
    </div>
  </form>
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/ajax.js') }}"></script>
{% endblock %}
