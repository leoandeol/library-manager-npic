{% extends 'base.html.twig' %}

{% block body %}
<article class="article-text-block" >
  <h1>Add new member</h1>
  <form action="/admin/added_user" method="post" class="big-form" onsubmit="return checkForm(this)">
    <div class="InputAddOn">
      <div class="InputAddOn-item" for="fname">First Name :</div>
      <input required type="text" id="fname" name="fname" onchange="testName(this)" class="InputAddOn-field" />
    </div><div class="InputAddOn">
      <div class="InputAddOn-item" for="code">Code :</div>
      <input required type="text" id="code" name="code" onchange="testCode(this)" class="InputAddOn-field" />
    </div><div class="InputAddOn">
      <div class="InputAddOn-item" for="lname">Last name :</div>
      <input required type="text" id="lname" name="lname" onchange="testName(this)" class="InputAddOn-field" />
    </div><div class="InputAddOn">
      <div class="InputAddOn-item" for="gender">Gender :</div>
      <div class="InputAddOn-field InputAddOn-field-radio">Male : <input type="radio" id="gender" name="gender" value="M"/>Female : <input type="radio" id="gender" name="gender" value="F" /></div>
    </div><div class="InputAddOn">
      <div class="InputAddOn-item" for="nid">National ID :</div>
      <input required type="text" id="nid" name="nid" onchange="testNationalID(this)" class="InputAddOn-field" />
    </div>
	
	<div class="InputAddOn">
      <div class="InputAddOn-item" for="dob">Date of birth :</div>
	  <div class="InputAddOn-item"for="day">Day:</div>
        <select class="InputAddOn-field" id="day" name="day">
        </select>
      <div class="InputAddOn-item" for="month">Month:</div>
        <select class="InputAddOn-field" id="month" name="month">
          <option selected>01</option>
          <option>02</option>
          <option>03</option>
          <option>04</option>
          <option>05</option>
          <option>06</option>
          <option>07</option>
          <option>08</option>
          <option>09</option>
          <option>10</option>
          <option>11</option>
          <option>12</option>
        </select>
		<div class="InputAddOn-item" for="year">Year:</div>
        <select class="InputAddOn-field" id="year" name="year">
        </select>
    </div>
	
	<div class="InputAddOn">
      <div class="InputAddOn-item" for="city">City :</div>
      <input required type="text" id="city" name="city" onchange="testCity(this)" class="InputAddOn-field" />
    </div><div class="InputAddOn">
      <div class="InputAddOn-item" for="home_phone">Home Phone :</div>
      <input required type="text" id="home_phone" name="home_phone" class="InputAddOn-field" />
    </div><div class="InputAddOn">
      <div class="InputAddOn-item" for="pcode">Postal code :</div>
      <input required type="text" onchange="testPostCode(this)" id="pcode" name="pcode" class="InputAddOn-field" />
    </div><div class="InputAddOn">
      <div class="InputAddOn-item" for="ref_phone">Referant Phone :</div>
      <input required type="text" id="ref_phone" name="ref_phone" class="InputAddOn-field" />
    </div><div class="InputAddOn">
      <div class="InputAddOn-item" for="street">Street :</div>
      <input required type="text" id="street" name="street" class="InputAddOn-field" />
    </div><div class="InputAddOn">
      <div class="InputAddOn-item" for="mob_phone">Mobile Phone :</div>
      <input required type="text" id="mob_phone" name="mob_phone" class="InputAddOn-field" />
    </div><div class="InputAddOn">
      <div class="InputAddOn-item" for="civsitu">Civil Situation :</div>
      <select required id="civsitu" name="civsitu" class="InputAddOn-field">
	<option value="single" selected>Single</option>
	<option value="married">Married</option>
	<option value="widower">Widower</option>
	<option value="divorced">Divorced</option>
	<option value="other">Other</option>
      </select>
    </div><div class="InputAddOn">
      <div class="InputAddOn-item" for="email">Email :</div>
      <input required type="text" id="email" onchange="testMail(this)" name="email" class="InputAddOn-field" />
    </div><div class="InputAddOn">
      <div class="InputAddOn-item" for="fac">Faculty :</div>
      <select required id="fac" name="fac" class="InputAddOn-field">
	{% for f in faculties %}
	<option value='{{f.id}}'>{{f.name}}</option>
	{% endfor %}
      </select>
    </div>

    <div class="InputAddOn">
      <div class="InputAddOn-item">Position :</div>
      <div class="InputAddOn-field InputAddOn-field-radio">Student : <input type="radio" id="student" name="position" value="student" selected/>Staff : <input type="radio" id="staff" name="position" value="staff" /></div>
    </div>

    <fieldset id="student_form" disabled class="fieldset-50">
      <div class="InputAddOn">
		<div class="InputAddOn-item">Major :</div>
			<select required id="major" name="major" class="InputAddOn-field">
			{% for m in majors %}
				<option value='{{m.getId()}}'>{{m.getName()}}</option>
			{% endfor %}
			</select>
	  </div>
	  <div class="InputAddOn">
		<div class="InputAddOn-item">Degree :</div>
			<select required id="degree" name="degree" class="InputAddOn-field">
			{% for d in degrees %}
				<option value='{{d.getId()}}'>{{d.getName()}}</option>
			{% endfor %}
			</select>
	  </div>
      <div class="InputAddOn">
		<div class="InputAddOn-item">Year :</div>
			<select required id="dyear" name="degree_year" class="InputAddOn-field">
			{% for y in degYears %}
				<option value='{{y.getId()}}'>{{y.getYear()}}</option>
			{% endfor %}
			</select>
	  </div>
    </fieldset>

    <fieldset id="staff_form" disabled class="fieldset-50">
      <div class="InputAddOn">
		<div class="InputAddOn-item">Function :</div>
			<select required id="function" name="function" class="InputAddOn-field">
			{% for f in functions %}
				<option value='{{f.getId()}}'>{{f.getName()}}</option>
			{% endfor %}
			</select>
	  </div>
    </fieldset>
	
    <div class="InputAddOn submit-login">
      <button type="submit" class="InputAddOn-item">Submit</button>
    </div>
	
  </form>
</article>
{% endblock %}

{% block javascripts %}
<script>
  var r_stu = document.getElementById("student");
  var r_sta = document.getElementById("staff");
  var stud = document.getElementById("student_form");
  var staff = document.getElementById("staff_form");
  r_stu.onclick=function(){ stud.disabled=false; staff.disabled=true; console.log("yolo");};
  r_sta.onclick=function(){ stud.disabled=true; staff.disabled=false; };
</script>
<script src="{{ asset('js/dates.js') }}"></script>
<script src="{{ asset('js/testForms.js') }}"></script>
{% endblock %}
