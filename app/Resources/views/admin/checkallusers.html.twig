
{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
  <div class="panel panel-default table-responsive">
    <div class="panel-heading">
      <h3 class="panel-title">List of users</h3>
    </div>
    <table class="table table-striped table-condensed panel-body">
      <thead>
	<tr>
	  <td>
            Code
	  </td>
	  <td>
            First name
	  </td>
	  <td>
            Last name
	  </td>
	  <td>
            Activity
	  </td>
	</tr>
      </thead>
      <tbody>
	{% for member in members %}
	<tr class="toSelect toSelectUser" id="{{member.code}}">
	  <td>
	    {{member.code}}
	  </td>
	  <td>
	    {{member.first_name}}
	  </td>
	  <td>
	    {{member.last_name}}
	  </td>
	  <td>
	    {% if member.disable == 0 %}
	    <span class="label label-success">Active</span>
	    {% else %}
	    <span class="label label-warning">Inactive</span>>
	    {% endif %}
	  </td>
	  <td>
	    <a href="/user/bookings/{{member.code}}"><button class="InputAddOn-item" >Check bookings</button></a>
	  </td>
	</tr>
	{% endfor %}
      </tbody>
    </table>
    <div class="panel-footer clearfix">
      <div class="ajaxButtons">
	{% if page>1 %}
	<button value="{{page-1}}" class="btn btn-primary center-block sortingButton previous"><span class="glyphicon glyphicon-backward"></span> Previous</button>
	{% endif %}
	{% if page<page_max %}
			    <button value="{{page+1}}" class="btn btn-primary center-block sortingButton next"><span class="glyphicon glyphicon-forward"></span> Next</button>{% endif %}
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/ajax.js') }}"></script>
<script src="{{ asset('js/tables.js') }}"></script>
{% endblock %}
